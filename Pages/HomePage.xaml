<Page x:Class="AkariLevelEditor.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch">
    <Page.Resources>
        <ui:SymbolIcon x:Key="ArrowResetIcon" Symbol="ArrowReset48" x:Shared="False" />

        <Style x:Key="TitleTextBlockStyle" TargetType="ui:TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style x:Key="SubTitleTextBlockStyle" TargetType="ui:TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <!-- ReSharper disable once Xaml.StaticResourceNotResolved -->
        <Style x:Key="ResetButtonStyle" TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="8,0,0,0" />
            <Setter Property="Icon" Value="{StaticResource ArrowResetIcon}" />
            <Setter Property="Padding" Value="0" />
            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                    </DataTrigger.Binding>
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputContainerStyle" TargetType="Grid">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 编辑区域 -->
        <StackPanel Margin="8">
            <!-- 全局设置 -->
            <ui:Card Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock Text="全局设置"
                                  Style="{StaticResource TitleTextBlockStyle}" />

                    <StackPanel Grid.Row="1">
                        <Grid Style="{StaticResource InputContainerStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="语言"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Languages}"
                                      SelectedItem="{Binding SelectedLanguage}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetLanguage}"
                                       Tag="{Binding IsLanguageDefault}" />
                        </Grid>

                        <Grid Style="{StaticResource InputContainerStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="配置文件版本"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:TextBox Grid.Column="1"
                                        Text="{Binding ConfigVersion}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetConfigVersion}"
                                       Tag="{Binding IsConfigVersionDefault}" />
                        </Grid>

                        <Grid Style="{StaticResource InputContainerStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="检查版本更新"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:ToggleSwitch Grid.Column="1"
                                             IsChecked="{Binding CheckUpdate}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetCheckUpdate}"
                                       Tag="{Binding IsCheckUpdateDefault}" />
                        </Grid>

                        <Grid Style="{StaticResource InputContainerStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="OP 版本更新通知"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:ToggleSwitch Grid.Column="1"
                                             IsChecked="{Binding OpNotify}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetOpNotify}"
                                       Tag="{Binding IsOpNotifyDefault}" />
                        </Grid>

                        <Grid Style="{StaticResource InputContainerStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="启用 bStats 统计"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:ToggleSwitch Grid.Column="1"
                                             IsChecked="{Binding SendMetrics}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetSendMetrics}"
                                       Tag="{Binding IsSendMetricsDefault}" />
                        </Grid>

                        <Grid Style="{StaticResource InputContainerStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="启用调试模式"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:ToggleSwitch Grid.Column="1"
                                             IsChecked="{Binding Debug}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetDebug}"
                                       Tag="{Binding IsDebugDefault}" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- 数据库设置 -->
            <ui:Card Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock Text="数据库设置"
                                  Style="{StaticResource TitleTextBlockStyle}" />

                    <StackPanel Grid.Row="1">
                        <Grid Style="{StaticResource InputContainerStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="使用玩家 UUID 进行存储"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:ToggleSwitch Grid.Column="1"
                                             IsChecked="{Binding UseUuid}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetUseUuid}"
                                       Tag="{Binding IsUseUuidDefault}" />
                        </Grid>

                        <Grid Style="{StaticResource InputContainerStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="存储方式"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding DatabaseMethods}"
                                      SelectedItem="{Binding SelectedDatabaseMethod}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetDatabaseMethod}"
                                       Tag="{Binding IsDatabaseMethodDefault}" />
                        </Grid>

                        <!-- JSON 设置 -->
                        <Expander Header="JSON 设置"
                                  Margin="0,8,0,10"
                                  IsExpanded="True"
                                  Visibility="{Binding IsJsonSelected}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBlock Text="文件路径"
                                              VerticalAlignment="Center"
                                              Margin="0,0,16,0" />
                                <ui:TextBox Grid.Column="1"
                                            Text="{Binding JsonFilePath}" />
                                <ui:Button Grid.Column="2"
                                           Style="{StaticResource ResetButtonStyle}"
                                           Command="{Binding ResetJsonFilePath}"
                                           Tag="{Binding IsJsonFilePathDefault}" />
                            </Grid>
                        </Expander>

                        <!-- SQL 设置 -->
                        <Expander Header="SQL 设置"
                                  Margin="0,8,0,10"
                                  IsExpanded="True"
                                  Visibility="{Binding IsSqlSelected}">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="主机"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding SqlHost}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetSqlHost}"
                                               Tag="{Binding IsSqlHostDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="端口"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding SqlPort}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetSqlPort}"
                                               Tag="{Binding IsSqlPortDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="用户名"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding SqlUser}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetSqlUser}"
                                               Tag="{Binding IsSqlUserDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="密码"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding SqlPassword}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetSqlPassword}"
                                               Tag="{Binding IsSqlPasswordDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="数据库"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding SqlDatabase}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetSqlDatabase}"
                                               Tag="{Binding IsSqlDatabaseDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="表名"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding SqlTable}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetSqlTable}"
                                               Tag="{Binding IsSqlTableDefault}" />
                                </Grid>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- 追踪设置 -->
            <ui:Card Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock Text="追踪设置"
                                  Style="{StaticResource TitleTextBlockStyle}" />

                    <StackPanel Grid.Row="1">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="保留原版等级系统"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:ToggleSwitch Grid.Column="1"
                                             IsChecked="{Binding VanillaTrace}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetVanillaTrace}"
                                       Tag="{Binding IsVanillaTraceDefault}" />
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="默认等级组"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:TextBox Grid.Column="1"
                                        Text="{Binding DefaultTraceGroup}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetDefaultTraceGroup}"
                                       Tag="{Binding IsDefaultTraceGroupDefault}" />
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="自动重置追踪等级组"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:ToggleSwitch Grid.Column="1"
                                             IsChecked="{Binding AutoResetTrace}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetAutoResetTrace}"
                                       Tag="{Binding IsAutoResetTraceDefault}" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- 队伍设置 -->
            <ui:Card Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock Text="队伍设置"
                                  Style="{StaticResource TitleTextBlockStyle}" />

                    <StackPanel Grid.Row="1">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="启用队伍经验共享"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:ToggleSwitch Grid.Column="1"
                                             IsChecked="{Binding TeamEnable}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetTeamEnable}"
                                       Tag="{Binding IsTeamEnableDefault}" />
                        </Grid>

                        <Expander Header="组队插件设置"
                                  Margin="0,8,0,10"
                                  IsExpanded="True"
                                  Visibility="{Binding TeamEnable}">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="组队插件"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding TeamPlugins}"
                                              SelectedItem="{Binding SelectedTeamPlugin}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetTeamPlugin}"
                                               Tag="{Binding IsTeamPluginDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="经验来源"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding TeamSource}"
                                                AcceptsReturn="True"
                                                TextWrapping="Wrap"
                                                Height="60"
                                                VerticalScrollBarVisibility="Auto" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetTeamSource}"
                                               Tag="{Binding IsTeamSourceDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="经验计算公式"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding TeamFormula}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetTeamFormula}"
                                               Tag="{Binding IsTeamFormulaDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="队长权重"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding TeamLeaderWeight}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetTeamLeaderWeight}"
                                               Tag="{Binding IsTeamLeaderWeightDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="队员权重"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding TeamMemberWeight}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetTeamMemberWeight}"
                                               Tag="{Binding IsTeamMemberWeightDefault}" />
                                </Grid>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- 属性设置 -->
            <ui:Card Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock Text="属性设置"
                                  Style="{StaticResource TitleTextBlockStyle}" />

                    <StackPanel Grid.Row="1">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="启用属性经验加成"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:ToggleSwitch Grid.Column="1"
                                             IsChecked="{Binding AttributeEnable}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetAttributeEnable}"
                                       Tag="{Binding IsAttributeEnableDefault}" />
                        </Grid>

                        <Expander Header="属性插件设置"
                                  Margin="0,8,0,10"
                                  IsExpanded="True"
                                  Visibility="{Binding AttributeEnable}">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="属性插件"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ComboBox Grid.Column="1"
                                              ItemsSource="{Binding AttributePlugins}"
                                              SelectedItem="{Binding SelectedAttributePlugin}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetAttributePlugin}"
                                               Tag="{Binding IsAttributePluginDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="属性名称"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding AttributeName}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetAttributeName}"
                                               Tag="{Binding IsAttributeNameDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="经验计算公式"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding AttributeFormula}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetAttributeFormula}"
                                               Tag="{Binding IsAttributeFormulaDefault}" />
                                </Grid>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="经验来源"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding AttributeSource}"
                                                AcceptsReturn="True"
                                                TextWrapping="Wrap"
                                                Height="60"
                                                VerticalScrollBarVisibility="Auto" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetAttributeSource}"
                                               Tag="{Binding IsAttributeSourceDefault}" />
                                </Grid>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- PlaceholderAPI 设置 -->
            <ui:Card Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock Text="PlaceholderAPI 设置"
                                  Style="{StaticResource TitleTextBlockStyle}" />

                    <StackPanel Grid.Row="1">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="变量前缀"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0" />
                            <ui:TextBox Grid.Column="1"
                                        Text="{Binding PlaceholderPrefix}" />
                            <ui:Button Grid.Column="2"
                                       Style="{StaticResource ResetButtonStyle}"
                                       Command="{Binding ResetPlaceholderPrefix}"
                                       Tag="{Binding IsPlaceholderPrefixDefault}" />
                        </Grid>

                        <Expander Header="经验条设置"
                                  Margin="0,8,0,10"
                                  IsExpanded="True">
                            <StackPanel>
                                <ui:TextBlock Text="等级经验条"
                                              Style="{StaticResource SubTitleTextBlockStyle}" />

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBlock Text="空位符号"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,16,0" />
                                    <ui:TextBox Grid.Column="1"
                                                Text="{Binding LevelBarEmpty}" />
                                    <ui:Button Grid.Column="2"
                                               Style="{StaticResource ResetButtonStyle}"
                                               Command="{Binding ResetLevelBarEmpty}"
                                               Tag="{Binding IsLevelBarEmptyDefault}" />
                                </Grid>

